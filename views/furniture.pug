doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Furniture Stock
  link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" 
  integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous")
  link(rel='stylesheet' href='css/tables.css')
h1 Registered Furniture Stock
table
  thead
    tr
      th Image
      th Furniture Type
      th Quantity
      th Price (per unit)
      th Material
      th Update
      th Delete
  tbody
    if furnitureStock.length > 0
      each item in furnitureStock
        tr
          td 
            img(scr="/"+item.furnitureImage alt="furniture image" width="150px" height="170px")
          td #{item.furnitureType}
          td #{item.quantity}
          td #{item.price}
          td #{item.material}
          td
            a.btn.btn-primary.btn-block(href=`/furniture/${item._id}`) Update
          td
            form(action="/deletefurniture" method='post')
              input(type="hidden" name="id" value=item._id)
              button.btn.btn-danger.btn-block(type="submit") Delete